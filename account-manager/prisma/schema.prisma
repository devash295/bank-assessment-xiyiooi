datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(uuid())
  password String
  accounts Account[]
}

model Account {
  id       String   @id @default(uuid())
  userId   String
  type     String
  balance  Float
  history  PaymentHistory[]
}

model PaymentHistory {
  id        String   @id @default(uuid())
  accountId String
  amount    Float
  timestamp DateTime @default(now())
}

model Transaction {
  id         String   @id @default(uuid())
  amount     Float
  timestamp  DateTime @default(now())
  toAddress  String
  status     String
}
